{
    "manifest_version": 3,
    "name": "LeetCode Mentor",
    "version": "3.0",
    "description": "AI-powered LeetCode companion: pseudocode hints, smart insights, personal notes & progress dashboard. Ace your coding interviews.",
    "permissions": ["activeTab", "scripting", "storage", "tabs"],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://leetcode.com/graphql"
    ],
    "icons": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon_16.png",
            "32": "images/icon_32.png",
            "48": "images/icon_48.png",
            "128": "images/icon_128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://leetcode.com/problems/*"],
            "js": ["inject.js"]
        }
    ]
}
